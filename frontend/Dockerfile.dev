# Development Dockerfile for Nuxt 3
FROM node:20-alpine AS development

# Install dependencies
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

ENV HOST 0.0.0.0
ENV PORT 3000

# Start development server
CMD ["npm", "run", "dev"]